<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatteryService.ServiceManager">
  <ContentPage.Content>
    <StackLayout Padding="10">
      <Label x:Name="lblDescription" Text="Simple UI to start/stop the Battery reporting service" FontSize="18" TextColor="Blue"/>
      <Button Text="START" BackgroundColor="Green" WidthRequest="90" TextColor="White" Clicked="OnStart"/>
      <Button Text="STOP" BackgroundColor="Red" WidthRequest="90" TextColor="White" Clicked="OnStop"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>